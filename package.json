{
  "name": "macro-controller",
  "description": "An experimental macro interpretation module",
  "version": "0.0.3",
  "license": "MIT",
  "author": {
    "name": "Patrick Jung",
    "email": "patrick.pddstudio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pddstudio/macro-controller"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "macro-controller": "bin/cli.js"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "prebuild:native:win": "yarn build",
    "prebuild:native:mac": "yarn build",
    "prebuild:native:linux": "yarn build",
    "build": "yarn compile",
    "build:native:win": "pkg . --target node14-win-x64 --out-path build",
    "build:native:mac": "pkg . --target node14-macos-x64 --out-path build",
    "build:native:linux": "pkg . --target node14-linux-x64 --out-path build",
    "clean": "rimraf dist",
    "compile": "tsc",
    "pretest": "yarn build",
    "test": "jest",
    "prerun:macro": "yarn build",
    "run:macro": "node bin/cli.js",
    "run:debug": "ts-node src/run.ts",
    "prerelease": "yarn build",
    "release": "release-it",
    "postinstall": "husky install"
  },
  "dependencies": {
    "jimp": "^0.11.0",
    "js-yaml": "^3.14.0",
    "json-beautify": "^1.1.1",
    "lodash": "^4.17.20",
    "reflect-metadata": "^0.1.13",
    "robotjs": "^0.6.0",
    "winston": "^3.3.3",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.2",
    "@types/yargs": "^15.0.7",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.2",
    "pkg": "^4.4.8",
    "prettier": "^2.0.5",
    "release-it": "^13.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^4.0.3",
    "husky": "^7.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-publish": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint",
      "prettier --parser typescript --write"
    ]
  }
}
