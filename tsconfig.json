{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "lib": [
      "es5", "es6", "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "checkJs": false
  },
  "include": [
    "./src/**/*.{ts, js}",
    "./typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
